<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.runachaqui.runachaqui.AnimalActivity"
    android:columnCount="4"
    android:background="@drawable/fondologin">

    <ImageButton
        android:id="@+id/btnMonoArdilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:layout_margin="10dp"
        android:text="Mono Ardilla"
        android:background="@null"
        android:src="@drawable/mnoardilla1"/>

    <ImageButton
        android:id="@+id/btnPiwicho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:layout_margin="10dp"
        android:text="Piwicho"
        android:background="@null"
        android:src="@drawable/pihuicho1"/>

    <ImageButton
        android:id="@+id/btnMotelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_margin="10dp"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Tortuga Motelo"
        android:background="@null"
        android:src="@drawable/motelo1"/>

    <ImageButton
        android:id="@+id/btnRanaFlechaPunteada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_margin="10dp"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Rana Flecha Punteada"
        android:background="@null"
        android:src="@drawable/ranaflechaplateada1"
        />

</GridLayout>
